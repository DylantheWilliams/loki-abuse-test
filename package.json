{
  "name": "loki-release",
  "version": "0.1.0",
  "description": "release pipeline and actions for Loki",
  "scripts": {
    "test": "jest",
    "workflows": "jsonnet -S main.jsonnet > .github/workflows/release.yml",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c .eslintrc.yml",
    "install-binary:package": "ncc build actions/install-binary/src/index.ts --license licenses.txt --out actions/install-binary/dist",
    "install-binary:package:watch": "npm run package -- --watch",
    "package": "for p in install-binary; do npm run ${p}:package; done",
    "all": "npm run workflows && npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grafana/loki-release.git"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/grafana/loki-release/issues"
  },
  "homepage": "https://github.com/grafana/loki-release#readme",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "release-please": "^16.3.0"
  }
}
